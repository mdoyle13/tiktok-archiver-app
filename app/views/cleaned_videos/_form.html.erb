<% if @video.errors.any? %>
  <div class="text-red-500">
      <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
  <%= form_with model: @video, url: cleaned_videos_path, scope: :cleaned_video, class: "w-full px-8", id: "form" do |f| %>
    <div class="flex flex-col w-full">
      <%= f.text_field :video_url, placeholder: "Paste a TikTok Video URL", class: "w-full mb-8" %>
      <%= f.submit "Get Download Links", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer m-auto" %>
    </div>
  <% end %>
